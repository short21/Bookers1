<body>
   <%= flash[:notice] %>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
      <th>本のタイトル</th>
      <th>感想</th>
      <th></th>
      </tr>
	</thead>

  　<tbody>
  　　 <% @books.each do |book| %>
  　　 <tr>
     　　<td><%= book.title %></td>
     　　<td><%= book.body %></td>
     　　<td><%= link_to "Show", book_path(book.id),class: 'Editlink' %></td>
     　　<td><%= link_to "Edit", edit_book_path(book.id),class: 'Editlink' %></td>
        <td><%= link_to "Destroy", book_path(book.id), class: 'Editlink', method: :delete,"data-confirm" => "Are you sure?" %></td>
     </tr>
     <% end %>
    </tbody>
  </table>

<h2>New book</h2>
<% if @book.errors.any? %>
<%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <div class ="field">
    <label for="book_title">本のタイトル</label><br>
    <%= f.text_field :title %>
  </div>

  <div class ="field">
    <label for="book_body">感想</label><br>
    <%= f.text_area :body %>
  </div>

  <div class ="action">
     <%= f.submit 'Create Book' %>
  </div>

<% end %>
</body>