<h1>Editing Book</h1>
<% if @book.errors.any? %>
<%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class = "field">
    <label for= "book_title">本のタイトル</label><br>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <label for= "book_body">感想</label><br>
    <%= f.text_area :body %>
  </div>


  <div class = "action">
     <%= f.submit 'Update Book' %>
  </div>

 <%= link_to "Show", book_path(@book.id),class: 'Editlink' %> | <%= link_to "Back",'/books',class: 'Editlink' %>

<% end %>

